#CLASS {quest} OPEN

#ACTION {$master(%1)}
{
     #variable master_id %1
}

#ACTION {^$target走了过来。}
{
     todo
}

#ACTION {^%1交给你一张回执。}
{
     #path destroy;
     fullme;
     #delay 3 {home;#delay 2 {finish}}
}

#ACTION {^( 你已经陷入半昏迷状态，随时都可能摔倒晕去。)}
{
     fullme;
     #end
}

#ACTION {^( 你看起来已经力不从心了。)}
{
     fullme;
     #end
}

#ACTION {^你的眼前一黑，接著什么也不知道了....}
{
     #end
}

#ACTION {^%1吩咐你在%2月%3日之前把信件送到%4(%5)手中，取回执交差。}
{
     #variable master %1;
     #variable target %4;
     #variable target_id %5
}

#ACTION {^%1对你道：这封信你帮我交到%2手中，他现在应该在%3，然后把回执带回来给我！}
{
     #variable master %1;
     #variable target %2;
     #variable target_place %3;
     quest;
     #delay 2 {questrun}
}

#ACTION {^这里没有这个人，你怎么领任务？}
{
     #bell
}

#ACTION {^%s$target($target_id)}
{
     todo
}

#ACTION {通过这次锻炼你获得了%1点经验，%2点潜能及%3点实战体会。}
{
     ready
}

#ALIAS {dd}
{
     #end
}

#ALIAS {finish}
{
     give receipt to $master_id
}

#ALIAS {food}
{
     eat gan liang;
     drink shui dai
}

#ALIAS {fullme}
{
     exert recover;
     exert regenerate;
     food
}

#ALIAS {home}
{
     rideto lingzhou;
     mgo 玄冥峰
}

#ALIAS {qm}
{
     quest $master_id
}

#ALIAS {questok}
{
     fullme;
     #delay 1 {home;#delay 2 {finish}}
}

#ALIAS {questrun}
{
     #path load ${path$placelist[$target_place][path]};
     #send $placelist[$target_place][go];
     #delay 1 {#path run 0.5}
}

#ALIAS {ready}
{
     eat haoyue dan;
     #delay 5 {qm}
}

#ALIAS {todo}
{
     give letter to $target_id
}

